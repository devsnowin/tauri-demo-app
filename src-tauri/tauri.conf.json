{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "Todist",
        "version": "0.0.4"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true
            },
            "notification": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "in.devsnow.todo",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "dialog": true,
            "endpoints": [
                "https://todist-update-server.vercel.app/update/{{target}}/{{current_version}}"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNGNDUxQTU3OTQwOUI4QzIKUldUQ3VBbVVWeHBGUDZxWE1HdjV1TmdyRjNpM0pzdnhBUFVwS2d1V0NxT3hJcmdzcDNkcXk1cVYK",
            "windows": {
                "installMode": "passive",
                "installerArgs": []
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Todist",
                "width": 800,
                "height": 600
            }
        ]
    }
}
